<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".option.my_profile.MyProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/my_profileActivity_imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image" />


    <LinearLayout
        android:id="@+id/my_data_user_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_profileActivity_imageView"
        android:background="@drawable/field_design"
        android:orientation="vertical">

        <EditText
            android:id="@+id/my_user_name_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/field_empty_design"
            android:hint="User name"
            android:inputType="textMultiLine"
            android:padding="4dp"
            android:drawableStart="@drawable/name_3"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/silver_dark"
            android:layout_marginHorizontal="16dp" />

        <EditText
            android:id="@+id/my_user_bio_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/field_empty_design"
            android:hint="Bio"
            android:inputType="textMultiLine"
            android:padding="4dp"
            android:drawableStart="@drawable/bio_3"/>
    </LinearLayout>

    <Button
        android:id="@+id/my_update_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_data_user_box"
        android:padding="8dp"
        android:layout_marginVertical="24dp"
        android:text="Update"
        android:textSize="18sp"
        android:background="@drawable/button_design"
        android:textColor="@color/white"
        app:backgroundTint="@color/black"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>