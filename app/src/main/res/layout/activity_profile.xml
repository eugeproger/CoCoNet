<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_activity_profile"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/user_name_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_activity_profile"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:text="User name"
        android:textSize="36sp"
        />


    <TextView
        android:id="@+id/user_bio_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_activity_profile"
        android:layout_marginTop="24dp"
        android:hint="Bio"
        android:textSize="20sp"
        android:padding="12dp"
        android:background="@drawable/field_design"/>

    <Button
        android:id="@+id/send_message_button_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_bio_activity_profile"
        android:padding="8dp"
        android:layout_marginTop="24dp"
        android:text="Send message"
        android:textSize="18sp"
        android:background="@drawable/button_design"
        android:textColor="@color/white"
        app:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/decline_message_button_activity_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_message_button_activity_profile"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_design"
        android:padding="8dp"
        android:text="Cancel chat request"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible"
        app:backgroundTint="@color/black" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>