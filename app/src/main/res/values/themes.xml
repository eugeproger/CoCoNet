<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CoCoNet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gray_4</item>
        <item name="colorOnPrimary">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">?attr/colorOnPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="tabSelectedTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="android:windowBackground">?attr/tabBackground</item>
        <item name="tabBackground">@color/gray_6</item>

    </style>
    <style name="Theme.CoCoNet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CoCoNet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CoCoNet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>